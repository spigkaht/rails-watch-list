<nav class="navtop">
  <%= link_to "BMDB", lists_path, class:"navbar-brand" %>
  <div>
  <%= link_to "home", lists_path, class:"navbar-brand" %>
  |
  <%= link_to "lists", lists_path, class:"navbar-brand" %>
  |
  <%= link_to "new list", lists_path, class:"navbar-brand" %>
  |
  <%= link_to "feedback", lists_path, class:"navbar-brand" %>
  </div>
  <i class="fa-solid fa-film"></i>
</nav>

<div class="banner">
</div>

<div class="heading">
  <h3><%= @list.name %></h3>
</div>

<div class="main-show">
  <% @list.movies.each do |movie| %>
    <div class="card card-movie">
      <div class="movie-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= movie.poster_url %>)">
      </div>
      <div class="movie-text">
        <p><%= movie.title %></p>
      </div>
    </div>
  <% end %>
</div>
